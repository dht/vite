{
  "compilerOptions": {
    "typeRoots": ["./src/lib-types", "./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext", "DOM", "ES2020"],
    "target": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "../",
    "paths": {
      "redux-connected": ["packages/redux-connected"],
      "shared-base": ["packages/shared-base"]
    }
  },
  "include": ["src"],
  "exclude": ["src/test"]
}
